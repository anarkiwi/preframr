FROM ubuntu:24.04
ARG PIP_OPTS=""
ENV PIP_OPTS=$PIP_OPTS
RUN apt-get -y update && apt-get -y install python3-dev python3-pip libasound2-dev alsa-utils intel-gpu-tools
COPY xpu-requirements.txt /root
RUN pip install $PIP_OPTS --break-system-packages /root/xpu-requirements.txt --extra-index-url https://download.pytorch.org/whl/xpu
COPY requirements.txt test-requirements.txt /root
RUN pip install $PIP_OPTS --break-system-packages -r /root/requirements.txt -r /root/test-requirements.txt
WORKDIR /
ENV PYTHONPATH=/
COPY preframr /preframr
COPY tests /tests
COPY run_tests.sh .
RUN ./run_tests.sh
